<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".handiassomember_valid_event_activity"
    android:background="@drawable/background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/label_nom_rando"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/marge_bord_superieur"
        android:textStyle="bold"
        android:textSize="23dp"
        android:text="@string/nom_randonne"/>

    <TextView
        android:id="@+id/label_date_randonne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/marge_bord_superieur"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="@string/date_randonne"/>

    <EditText
        android:id="@+id/saisie_date_rando"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marge_verticale_vue_principale"
        android:layout_marginLeft="@dimen/marge_horizontale_vue_principale"
        android:layout_marginRight="@dimen/marge_horizontale_vue_principale"
        android:background="@drawable/edittext"
        android:hint="@string/saisie_date"/>

    <TextView
        android:id="@+id/label_lieu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/marge_bord_superieur"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="@string/lieu"/>

    <EditText
        android:id="@+id/saisie_postale_adresse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marge_verticale_vue_principale"
        android:layout_marginLeft="@dimen/marge_horizontale_vue_principale"
        android:layout_marginRight="@dimen/marge_horizontale_vue_principale"
        android:background="@drawable/edittext"
        android:hint="@string/saisie_adresse"/>

    <TextView
        android:id="@+id/label_nb_participant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/marge_bord_superieur"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="@string/nb_participants"/>

    <EditText
        android:id="@+id/saisie_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marge_verticale_vue_principale"
        android:layout_marginLeft="@dimen/marge_horizontale_vue_principale"
        android:layout_marginRight="@dimen/marge_horizontale_vue_principale"
        android:background="@drawable/edittext"
        android:hint="@string/nb_part"/>

    <TextView
        android:id="@+id/label_echeance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/marge_bord_superieur"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="@string/echeance"/>

    <EditText
        android:id="@+id/saisie_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marge_verticale_vue_principale"
        android:layout_marginLeft="@dimen/marge_horizontale_vue_principale"
        android:layout_marginRight="@dimen/marge_horizontale_vue_principale"
        android:background="@drawable/edittext"
        android:hint="@string/saisie_echeance"/>

    <TextView
        android:id="@+id/label_participe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/marge_bord_superieur"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="@string/participation"/>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_marginTop="@dimen/marge_verticale_vue_principale"
        android:layout_height="fill_parent">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center">

            <Button
                android:id="@+id/btn_oui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bouttons2"
                android:layout_marginRight="15dp"
                android:text="@string/valide_oui"/>

            <Button
                android:id="@+id/btn_non"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bouttons2"
                android:text="@string/valide_non"/>

        </TableRow>
    </TableLayout>

</LinearLayout>