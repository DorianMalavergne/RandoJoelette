<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountRandomemberActivity"
    android:background="@drawable/background"
    android:orientation="vertical">

    <Spinner
        android:id="@+id/spinner_statut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:entries="@array/array_statut"/>

    <TextView
        android:id="@+id/label_nom_asso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="@string/label_nom_randonneur"/>

    <EditText
        android:id="@+id/saisie_nom_asso"
        android:layout_width="match_parent"
        android:background="@drawable/edittext"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/label_nom_president"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="@string/label_prenom_randonneur"/>

    <EditText
        android:id="@+id/saisie_nom_president"
        android:layout_width="match_parent"
        android:background="@drawable/edittext"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/label_adresse_asso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="@string/label_adresse_randonneur"/>

    <EditText
        android:id="@+id/saisie_adresse_asso"
        android:layout_width="match_parent"
        android:background="@drawable/edittext"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/label_tel_asso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="@string/label_tel_randonneur"/>

    <EditText
        android:id="@+id/saisie_tel_asso"
        android:layout_width="match_parent"
        android:background="@drawable/edittext"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_valider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marge_verticale_vue_principale"
        android:layout_gravity="center"
        android:background="@drawable/buttonshape"
        android:text="@string/btn_valider"/>

</LinearLayout>