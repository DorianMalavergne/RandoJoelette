<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/label_nom_rando"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="23dp"
        android:text="@string/label_nom_rando"/>

    <TextView
        android:id="@+id/label_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/marge_verticale_vue_principale"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="@string/label_date_rando"/>

    <EditText
        android:id="@+id/saisie_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext"
        android:hint="@string/hint_date"/>

    <TextView
        android:id="@+id/label_lieu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marge_verticale_vue_principale"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="@string/label_lieu"/>

    <EditText
        android:id="@+id/saisie_lieu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext"
        android:hint="@string/hint_lieu"/>

    <TextView
        android:id="@+id/label_nb_participant_requis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marge_verticale_vue_principale"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="@string/label_nb_participant_requis"/>

    <EditText
        android:id="@+id/saisie_nb_participant_min"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext"
        android:hint="@string/hint_nb_participant_min"/>

    <TextView
        android:id="@+id/label_date_echeance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marge_verticale_vue_principale"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="@string/label_date_echeance"/>

    <EditText
        android:id="@+id/saisie_echeance_reponse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext"
        android:hint="@string/hint_date_echeance"/>

    <TextView
        android:id="@+id/label_participe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marge_verticale_vue_principale"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="@string/label_participation"/>


    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marge_verticale_vue_principale">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center">

            <Button
                android:id="@+id/btn_oui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:background="@drawable/bouttons2"
                android:text="@string/valide_oui" />

            <Button
                android:id="@+id/btn_non"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bouttons2"
                android:text="@string/valide_non" />

        </TableRow>
    </TableLayout>

    <EditText
        android:id="@+id/saisie_motif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marge_verticale_vue_principale"
        android:layout_marginLeft="@dimen/marge_horizontale_vue_principale"
        android:layout_marginRight="@dimen/marge_horizontale_vue_principale"
        android:background="@drawable/edittext"
        android:hint="@string/saisie_motif" />
</LinearLayout>